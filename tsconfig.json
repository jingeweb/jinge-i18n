{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "stripInternal": true,
    "alwaysStrict": true,
    "allowJs": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "lib",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      
    }
  },
  "include": [
    "src/**/*",
    "tool/**/*"
  ]
}