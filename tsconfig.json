{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2022",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "stripInternal": true,
    "alwaysStrict": true,
    "allowJs": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "compiler",
    "sourceMap": true,
    "outDir": ".tmp",
    "baseUrl": "."
  },
  "include": [
    "tool/**/*"
  ]
}